<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Bean with scope: singleton -->
    <bean id="singletonBean" class="main.java.com.springproject.scope.Message" scope="singleton"></bean>

    <!-- Bean with scoope: prototype -->
    <bean id="prototypeBean" class="main.java.com.springproject.scope.Message" scope="prototype"></bean>
</beans>